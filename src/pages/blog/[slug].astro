---
import Layout from '../../components/Layout.astro';
import Window from '../../components/Window.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <Window title={`${entry.data.title} - NateAGeek's Blog`}>
    
    <article class="blog-post">
      <header class="post-header">
        <h1 class="post-title">
          <img src="/imgs/cool.gif" alt="Cool" style="height: 30px; vertical-align: middle;" />
          {entry.data.title}
          <img src="/imgs/cool.gif" alt="Cool" style="height: 30px; vertical-align: middle;" />
        </h1>
        
        <div class="post-meta">
          <div class="meta-item">
            üìÖ Published: {entry.data.pubDate.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </div>
          
          {entry.data.updatedDate && (
            <div class="meta-item">
              üîÑ Updated: {entry.data.updatedDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </div>
          )}
          
          {entry.data.tags.length > 0 && (
            <div class="meta-item tags-section">
              üè∑Ô∏è Tags: 
              {entry.data.tags.map((tag: string) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
        </div>
      </header>

      <div class="post-content">
        <Content />
      </div>

      <footer class="post-footer">
        <div class="navigation">
          <a href="/blog" class="nav-btn">
            <img src="/imgs/lightningbanner.gif" alt="Lightning" style="height: 16px; vertical-align: middle;" />
            ‚Üê Back to Blog Archive
          </a>
          <a href="/" class="nav-btn">
            üè† Home
          </a>
        </div>
        
        <div class="post-actions">
          <div class="share-section">
            <p>
              <img src="/imgs/science happy man.gif" alt="Happy" style="height: 20px; vertical-align: middle;" />
              Enjoyed this post? Tell your friends on ICQ!
            </p>
          </div>
          
          <div class="webring-section">
            <p>
              <img src="/imgs/earthanim1.gif" alt="Earth" style="height: 20px; vertical-align: middle;" />
              Part of the NateAGeek Web Ring
              <img src="/imgs/earthanim1.gif" alt="Earth" style="height: 20px; vertical-align: middle;" />
            </p>
          </div>
        </div>
      </footer>
    </article>

  </Window>
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    font-family: 'Times New Roman', serif;
    line-height: 1.6;
  }

  .post-header {
    text-align: center;
    margin-bottom: 40px;
    padding: 25px;
    background: linear-gradient(45deg, #ff00ff, #00ffff);
    border: 3px solid #ffff00;
    border-radius: 15px;
  }

  .post-title {
    font-size: 2.5em;
    color: #ffffff;
    text-shadow: 3px 3px 6px #000000;
    margin-bottom: 20px;
    animation: bounce 2s infinite;
  }

  .post-meta {
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: center;
  }

  .meta-item {
    background: rgba(0, 0, 0, 0.7);
    color: #ffffff;
    padding: 8px 15px;
    border-radius: 20px;
    font-family: 'Courier New', monospace;
    font-size: 14px;
  }

  .tags-section {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .tag {
    background: #00ff00;
    color: #000000;
    padding: 3px 10px;
    border-radius: 15px;
    font-size: 12px;
    font-weight: bold;
    margin-left: 5px;
  }

  .post-content {
    background: #ffffff;
    padding: 30px;
    border: 3px solid #333333;
    border-radius: 10px;
    margin-bottom: 30px;
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.2);
  }

  /* Style the markdown content */
  .post-content h1 {
    color: #ff00ff;
    border-bottom: 3px solid #00ffff;
    padding-bottom: 10px;
  }

  .post-content h2 {
    color: #0066cc;
    margin-top: 30px;
  }

  .post-content h3 {
    color: #ff6600;
  }

  .post-content p {
    margin-bottom: 15px;
    color: #333333;
  }

  .post-content a {
    color: #0066cc;
    text-decoration: underline;
  }

  .post-content a:hover {
    color: #ff00ff;
    background: #ffff00;
    padding: 2px 4px;
  }

  .post-content ul, .post-content ol {
    margin-left: 30px;
    margin-bottom: 15px;
  }

  .post-content blockquote {
    background: #f0f0f0;
    border-left: 5px solid #00ffff;
    padding: 15px;
    margin: 20px 0;
    font-style: italic;
  }

  .post-content code {
    background: #000000;
    color: #00ff00;
    padding: 2px 6px;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
  }

  .post-content pre {
    background: #000000;
    color: #00ff00;
    padding: 15px;
    border-radius: 5px;
    overflow-x: auto;
    border: 2px solid #00ff00;
  }

  .post-content img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 20px auto;
    border: 3px solid #333333;
    border-radius: 10px;
  }

  .post-footer {
    background: linear-gradient(135deg, #ff6b6b, #4ecdc4);
    padding: 25px;
    border: 3px solid #333333;
    border-radius: 15px;
    text-align: center;
  }

  .navigation {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 25px;
    flex-wrap: wrap;
  }

  .nav-btn {
    background: #ffffff;
    color: #333333;
    padding: 12px 20px;
    text-decoration: none;
    border-radius: 25px;
    font-weight: bold;
    border: 2px solid #333333;
    transition: all 0.2s;
  }

  .nav-btn:hover {
    background: #333333;
    color: #ffffff;
    transform: scale(1.05);
  }

  .post-actions {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .share-section, .webring-section {
    color: #ffffff;
    text-shadow: 2px 2px 4px #000000;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
    40% { transform: translateY(-10px); }
    60% { transform: translateY(-5px); }
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2em;
    }
    
    .post-content {
      padding: 20px;
    }
    
    .navigation {
      flex-direction: column;
      align-items: center;
    }
    
    .meta-item {
      font-size: 12px;
    }
  }
</style>
